my $attach;  # attach csv report to report mail
my $quiet;   # suppress output to STDOUT
my $csv;     # export data as csv
my $file;    # write output to file
my $logfile;
my $nonccsync = 0;

# which reports
my $classreport = 0;
my $localreport = 0;
my $nccreport   = 0;


use Getopt::Long;

my $LOG = undef;

# configuration
my %conf = (
            SUSE         => { 
